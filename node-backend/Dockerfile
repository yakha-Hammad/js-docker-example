FROM node:16
# ID generated by whole process
#  Id: For this image: cca3f5fb19dc41130bf1ac88e8a10e425fc1b42b10d5aa56b2f71bc54c4d1517
# Create app directory
#WORKDIR /app

# Install app dependencies
# A wildcard is used to ensure both package.json AND package-lock.json are copied
# where available (npm@5+)
COPY package*.json ./

RUN npm install
# If you are building your code for production
# RUN npm ci --only=production

# Bundle app source
COPY . .

EXPOSE 8080
CMD [ "node", "server.js" ]